@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home Page</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .card {
            height: 200px; /* Kare şeklinde olmasını sağlamak için yüksekliği ayarlayın */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Panel kenarına gölge ekler */
        }

        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .container {
            display: flex;
            justify-content: center;
        }

        .row {
            margin-top: 100px; /* Satırı sayfanın ortasına doğru indirmek için üst margin */
        }

        .card-title {
            font-size: 1.2rem; /* Başlık boyutunu ayarlayın */
        }

        .card-text {
            font-size: 2rem; /* Rakam boyutunu ayarlayın */
        }

        .btn-custom {
            background-color: #007bff; /* Buton arka plan rengi */
            color: #fff; /* Buton metin rengi */
            border: none;
            padding: 10px 20px;
            border-radius: 5px; /* Buton köşe yuvarlama */
            font-size: 1rem;
        }

        .btn-custom:hover {
            background-color: #0056b3; /* Hover durumunda buton arka plan rengi */
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Panel 1 -->
            <div class="col-md-6 col-lg-3 mb-4">
                <a href="@Url.Action("Index", "Employees")" class="text-decoration-none">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Sent Tasks</h5>
                            <p class="card-text">10</p> <!-- Dinamik değer ile değiştirin -->
                        </div>
                    </div>
                </a>
            </div>

            <!-- Panel 2 -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Inbox</h5>
                        <p class="card-text">5</p> <!-- Dinamik değer ile değiştirin -->
                    </div>
                </div>
            </div>

            <!-- Panel 3 -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">In Progress Tasks</h5>
                        <p class="card-text">3</p> <!-- Dinamik değer ile değiştirin -->
                    </div>
                </div>
            </div>

            <!-- Panel 4 -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Completed Tasks</h5>
                        <p class="card-text">1</p> <!-- Dinamik değer ile değiştirin -->
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <button type="button" class="btn-custom" data-bs-toggle="modal" data-bs-target="#projectModal">Project Add</button>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="projectModal" tabindex="-1" aria-labelledby="projectModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="projectModalLabel">Add New Project</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="projectName" class="form-label">Project Name</label>
        <input type="text" class="form-control" id="projectName" name="Name" placeholder="Enter project name" required>
    </div>
    <button type="submit" class="btn btn-primary">Save Project</button>
</form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



